{
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "sourceMap": true,
    "declarationMap": true,
    "lib": ["ESNext", "DOM"],
    "allowJs": true,
    "module": "ESNext"
  }
}
